{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
            src="https://code.jquery.com/jquery-3.7.0.slim.min.js"
            integrity="sha256-tG5mcZUtJsZvyKAxYLVXrmjKBVLd6VpVccqz/r4ypFE="
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
            showCompetences();
        });

        function showCompetences() {
            let type_user = $("#user_type").val();
            if (type_user === 'Etudiant') {
                $("#competences").show();
                $("#user_skills").attr("required", "required");
                $("#user_niveau").attr("required", "required");
                $("#user_interets").attr("required", "required");
            } else {
                $("#competences").hide();
                $("#user_skills").attr("required", null);
                $("#user_niveau").attr("required", null);
                $("#user_interets").attr("required", null);
            }
        }

        $(document).on("change", "#user_type", function () {
            showCompetences();
        });


    </script>
{% endblock %}
